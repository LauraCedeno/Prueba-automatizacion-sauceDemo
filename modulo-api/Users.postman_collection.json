						"exec": [
							"// Content-Type",
							"",
							"pm.test('Content-Type es application/json', () => { const ct = (pm.response.headers.get('Content-Type')||'').toLowerCase(); pm.expect(ct).to.include('application/json'); });",
							"",
							"// Status",
							"",
							"pm.test('Status 201 Created', () => pm.response.to.have.status(201));",
							"",
							"// Body JSON",
							"",
