							"",
							"const json = pm.response.json();",
							"",
							"// Campos y tipos",
							"",
							"pm.test('Campos obligatorios y tipos', () => { pm.expect(json).to.have.property('id'); pm.expect(json).to.have.property('createdAt'); pm.expect(json.id).to.be.a('string'); pm.expect(json.createdAt).to.be.a('string'); if(json.name!==undefined) pm.expect(json.name).to.be.a('string'); if(json.job!==undefined) pm.expect(json.job).to.be.a('string'); });",
							"",
							"// Guardar variables y alinear id del mock",
							"",
							"pm.collectionVariables.set('userId','123');",
							"",
							"const req = pm.request.body ? JSON.parse(pm.request.body.raw) : {};",
							"",
							"pm.collectionVariables.set('userName', req.name || pm.collectionVariables.get('userName'));",
							"",
							"pm.collectionVariables.set('userJob', req.job || pm.collectionVariables.get('userJob'));",
