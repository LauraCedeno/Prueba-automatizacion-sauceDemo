							"",
							"pm.test('Valores coinciden con lo enviado', () => { const d=json.data;pm.expect(d.name).to.eql(pm.collectionVariables.get('userName')); pm.expect(d.job).to.eql(pm.collectionVariables.get('userJob')); });",
